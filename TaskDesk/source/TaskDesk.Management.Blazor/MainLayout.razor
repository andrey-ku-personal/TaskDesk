@using TaskDesk.Management.Blazor.Components.Navigation;

@inherits LayoutComponentBase

<MudThemeProvider/>
<MudDialogProvider
    Position="DialogPosition.Center" />
<MudSnackbarProvider/>

<MudLayout>
    <MudDrawer Open="true" Elevation="0" Variant="@DrawerVariant.Persistent">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Task Desk</MudText>
        </MudDrawerHeader>
        <MudNavMenu>
            <MudNavLink Href="/" Icon="@Icons.Material.Filled.Dashboard">Home</MudNavLink>
            <MudNavLink Href="/project/list" Icon="@Icons.Material.Filled.ViewList">Projects</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        <MudContainer>
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>