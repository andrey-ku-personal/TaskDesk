@inject IDialogService DialogService

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Edit" Class="mr-3" /> Create Project
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudPaper Width="400px" Elevation="0" Class="py-2">
            <MudList Clickable="true">
                <MudListItem
                    AdornmentColor="Color.Primary"
                    Text="New Project"
                    Icon="@Icons.Material.Filled.ArrowRightAlt"
                    OnClick="OpenCreateProjectFormDialog"
                    IconColor="Color.Primary" />
                <MudListItem
                    Text="New Project Group"
                    Icon="@Icons.Material.Filled.ArrowRightAlt"
                    IconColor="Color.Primary" />
                <MudListItem
                    Text="Import"
                    Icon="@Icons.Material.Filled.ArrowRightAlt"
                    IconColor="Color.Primary" />
            </MudList>
        </MudPaper>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = default!;

    private void Cancel() => MudDialog.Cancel();

    private void OpenCreateProjectFormDialog()
    {
        DialogService.Show<Dialogs.DialogCreateProjectForm>();
    }
}