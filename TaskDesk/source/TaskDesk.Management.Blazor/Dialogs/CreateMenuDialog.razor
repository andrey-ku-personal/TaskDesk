@inject IDialogService DialogService

<MudDialog>
    <DialogContent>
        <MudPaper Width="400px" Class="py-2">
            <MudList Clickable="true">
                <MudListItem Text="New Project" Icon="@Icons.Material.Filled.ArrowRightAlt" OnClick="OpenCreateProjectFormDialog" />
                <MudListItem Text="New Project Group" Icon="@Icons.Material.Filled.ArrowRightAlt" />
                <MudListItem Text="Import" Icon="@Icons.Material.Filled.ArrowRightAlt" />
            </MudList>
        </MudPaper>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = default!;

    private void Cancel() => MudDialog.Cancel();

    private void OpenCreateProjectFormDialog()
    {
        var options = new DialogOptions() { MaxWidth = MaxWidth.Large, CloseButton = true };
        DialogService.Show<Dialogs.CreateProjectFormDialog>("Create Project Form Dialog", options);
    }
}